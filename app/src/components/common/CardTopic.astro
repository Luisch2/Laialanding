---
const { idx, item } = Astro.props;
const { thumbnail, title, description, duration, _slug} = item;
---

<div class="space-y-2 sm:max-w-sm">
    <!--
    <div>
        <img src={thumbnail} class="rounded-lg w-full" alt={title} />
    </div>
     -->
    <div class="h-64 sm:h-40 md:h-52 lg:h-44  xl:h-56 overflow-hidden rounded-xl flex items-center justify-center bg-black">
        <img src={thumbnail} src="/img/media.png" class="w-full "  alt={title}  />
    </div>
    <div class="pt-2 text-sm flex items-center justify-between">
        <span class="text-brand-main font-semibold">Lesson {idx + 1}</span>
        <span class="text-sm text-gray-600 font-semibold">
            {duration}
        </span>
    </div>
    <h3  class="block text-black text-lg font-medium">
        {title}
    </h3>
    <p class="text-gray-700">
        {description}
    </p>
</div>
